---
import Layout from "../../layouts/Layout.astro";
import HeroContainer from '../HeroContainer.astro'
import Button from "../Button.astro";
import Numeros from "../Numeros.astro";
import Galeria from "../Galeria.astro";

import { getI18N } from "../../i18n/";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<Layout title={i18n.SEO.ARCHIVO_TITLE} description={i18n.SEO.ARCHIVO_DESCRIPTION}>
	<HeroContainer 
		img="/archivo-background.webp"
	>
		<h1 class="text-4xl text-center uppercase mb-20 font-tomaso tracking-widest lg:text-6xl">{i18n.ARCHIVO.HERO_TITLE}</h1>

		<Button class=" animate-fade-up" url="https://www.youtube.com/watch?v=1YmpPrqKP-g">
			{i18n.VIDEO_BUTTON}
		</Button>

	</HeroContainer>

	<main>
		<Galeria />
		<Numeros />
	</main>
</Layout>

